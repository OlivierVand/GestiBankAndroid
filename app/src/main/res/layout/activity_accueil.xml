<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sip.gestibank.Accueil"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="175dp"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gestibank" />


    <TextView
        android:id="@+id/textViewMaRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Ma région :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerRegion"
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="44dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/buttonAccederCompte"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corners"
        android:onClick="callSChargement"
        android:textColor="#FFFFFF"
        android:text="Accéder à mon compte"
        app:backgroundTint="#F7931A"
        />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/image1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        tools:context="com.sip.gestibank.MainActivity">



    </LinearLayout>


</LinearLayout>







