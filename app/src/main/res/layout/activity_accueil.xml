<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sip.gestibank.Accueil"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_gravity="center_horizontal"
        android:layout_width="175dp"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gestibank" />

    <TextView
        android:id="@+id/textViewMaRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Ma région :"
        android:textColor="#000000"
        android:textSize="24sp"/>

    <Spinner
        android:id="@+id/spinnerRegion"
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="44dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/buttonAccederCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Accéder à mon compte"
        android:onClick="callSChargement"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        tools:context="com.sip.gestibank.MainActivity">

        <Button
            android:id="@+id/buttonUrgence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgence"
            app:backgroundTint="#99F7931A" />

        <Button
            android:id="@+id/buttonInfosLegale"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Infos Légales"
            app:backgroundTint="#99F7931A"
            />


    </LinearLayout>


</LinearLayout>