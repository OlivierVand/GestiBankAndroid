<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sip.gestibank.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_gravity="center_horizontal"
        android:layout_width="175dp"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gestibank" />

    <TextView
        android:id="@+id/textViewBienvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#99F7931A"
        android:text="Bienvenue sur GestiBank"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <Button
        android:id="@+id/buttonSeConnecter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Se connecter"
        android:textColor="#000000"
        android:onClick="callSAccueil"
        app:backgroundTint="#F7931A"
        />

    <Button
        android:id="@+id/buttonCreation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:onClick="callSCreationCompte"
        android:text="Créer un compte"
        app:backgroundTint="#99F7931A"
        />

    <Button
        android:id="@+id/buttonConversion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:onClick="callSDevise"
        android:text="Conversion de devise"
        app:backgroundTint="#99F7931A"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        tools:context="com.sip.gestibank.MainActivity"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUrgence"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Urgence"
            app:backgroundTint="#99F7931A"
            />

        <Button
            android:id="@+id/buttonInfosLegale"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Infos Légales"
            app:backgroundTint="#99F7931A"
            />


    </LinearLayout>


</LinearLayout>