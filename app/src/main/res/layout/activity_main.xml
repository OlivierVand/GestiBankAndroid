<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sip.gestibank.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="175dp"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gestibank" />

    <TextView
        android:id="@+id/textViewBienvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#F7931A"
        android:fontFamily="arial"
        android:text="BIENVENUE SUR GESTIBANK"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />


    <Button
        android:id="@+id/buttonSeConnecter"
        android:background="@drawable/rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="callSAccueil"
        android:text="Se connecter"
        android:textColor="#FFFFFF"
        app:backgroundTint="#F7931A" />

    <Button
        android:id="@+id/buttonCreation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:onClick="callSCreationCompte"
        android:text="CrÃ©er un compte"
        android:background="@drawable/rounded_corners"
        app:backgroundTint="#F7931A" />

    <Button
        android:id="@+id/buttonConversion"
        android:background="@drawable/rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:onClick="callSDevise"
        android:text="Conversion de devise"
        app:backgroundTint="#F7931A" />




</LinearLayout>
