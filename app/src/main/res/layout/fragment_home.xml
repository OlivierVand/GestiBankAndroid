<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.sip.gestibank.Comptes"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-39dp">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="175dp"
            android:layout_height="126dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/gestibank" />

        <TextView
            android:id="@+id/textViewCreerCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#F7931A"
            android:text="MES COMPTES"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Compte Courant"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Solde : "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:id="@+id/textViewSolde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="220dp"
                        android:padding="16dp"
                        android:text="1504 €"
                        android:textColor="#F7931A"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="16dp"
                        android:text="Compte n°124547851"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Compte Epargne"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Solde : "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="220dp"
                        android:padding="16dp"
                        android:text="9547 €"
                        android:textColor="#F7931A"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="16dp"
                        android:text="Livret n°8124547851"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Ma carte"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Plafond : "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="190dp"
                        android:padding="16dp"
                        android:text="153€/1500€"
                        android:textColor="#F7931A"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="16dp"
                        android:text="Carte n°8124547851"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="@id/cardView"
                        app:layout_constraintTop_toTopOf="@id/cardView" />


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>