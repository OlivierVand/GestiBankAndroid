<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cheque.ChequeViewModel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sip.gestibank.commandechequier"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="175dp"
            android:layout_height="126dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/gestibank" />

        <TextView
            android:id="@+id/textViewCreerCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#F7931A"
            android:text="COMMANDER UN CHÉQUIER"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

        <Switch
            android:id="@+id/horizontal"
            android:layout_width="170dp"
            android:checked="true"
            android:textSize="13dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Format horizontal" />

        <Switch
            android:id="@+id/vertical"
            android:layout_width="170dp"
            android:layout_height="44dp"
            android:textSize="13dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Format vertical" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

        <Switch
            android:id="@+id/domicile"
            android:layout_width="175dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Envoyer à domicile" />

        <Switch
            android:id="@+id/agence"
            android:layout_width="190dp"
            android:layout_height="44dp"
            android:checked="true"
            android:layout_marginLeft="13dp"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Récupérer en agence" />
</LinearLayout>
        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#F7931A"
            android:text="Commander" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>