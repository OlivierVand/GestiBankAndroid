<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.assurance.AssuranceViewModel">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sip.gestibank.assurance"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="175dp"
            android:layout_height="126dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/gestibank" />

        <TextView
            android:id="@+id/textViewCreerCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#F7931A"
            android:text="PROFIL ET RÉGLAGES"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:checked="true"
            android:layout_marginTop="30dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Connexion" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="GestiSécur" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Solde Rapide" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:checked="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Virement instantané" />

        <Switch
            android:id="@+id/switch5"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Paylib entre amis" />

        <Switch
            android:id="@+id/switch6"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:checked="true"
            android:layout_marginTop="30dp"
            android:thumb="@android:drawable/btn_star_big_on"
            android:text="Notification et alertes"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>